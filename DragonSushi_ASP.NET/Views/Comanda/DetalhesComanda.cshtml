@model IEnumerable<DragonSushi_ASP.NET.ViewModel.ComandaViewModel>

@{ ViewBag.Title = "DetalhesComanda";}
<section class="table-info">
    <div class="table-info__top">

        @foreach (var item in Model)
        {
     
           <h1>@item.Comanda.idComanda;</h1> 
           <h2>@item.Comanda.numMesa;</h2>
            if (@item.Comanda.idComanda == @item.Comanda.idComanda) {
                break;
            }


        }

        @foreach (var item in Model)
        {

            <ul class="table-info__list">

                <li class="table-info_list_item">
                    <span class="table-info_listitem_amount"> @item.Pedido.qtdProd </span> @item.Pedido.fkProd;
                </li>

            </ul>
        }

        </div >
        <div class="table-info__bottom">
        <div class="table-info__price-note">
            <p class="table-info_prince-note_subtotal"><span class="accent-text">Subtotal:</span> R$0</p>
            <p class="table-info_prince-note_service-charge"><span class="accent-text">Taxa de serviço:</span> R$10,00</p>
            <p class="table-info_prince-note_total"><span class="accent-text total">Total:</span> R$0</p>
        </div>
