@model  IEnumerable<DragonSushi_ASP.NET.ViewModel.PedidoViewModel>

@{
    ViewBag.Title = "LançarPedido";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    @Styles.Render("~/Content/style.css")
    @Scripts.Render("~/bundles/modernizr")

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="keywords" content="Restaurante, Japonês, Delivery, Sushi, Temaki, ">
    <meta name="description" content="Faça já seu pedido na Dragon Sushi! Confira nossos pratos, ofertas e muito mais!">
    <meta name="author" content="Gabriel S. Evangelista, Henrique R. Pereira, Guilherme Ferreira, Gustavo Basilio, Maria Eduarda G. Lima, Guilherme Lemes">
    <link rel="shortcut icon" type="~/images/x-icon" href="favicon.ico">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Patua+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;700&display=swap" rel="stylesheet">


    <script defer src="https://code.iconify.design/iconify-icon/1.0.0-beta.3/iconify-icon.min.js"></script>

    <title>Dragon Sushi - Restaurante Japonês</title>
</head>
<body>
 
    <main class="product__register">
        <div class="form">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <h1 class="form__title">Lançar pedido</h1>
                <div class="form__box">
                    <div class="form__box__input-icon">
                        @Html.EditorFor(model => item.Comanda.idComanda, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form__box">
                    <div class="form_box_input-icon">
                        <select name="Produto">
                            @foreach (var itemitem in Model)
                            {
                                <option value="@itemitem.Produto.idProd">
                                    @itemitem.Produto.nomeProd
                                </option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form__box">
                    <div class="form__box__input-icon">
                        @Html.EditorFor(model => item.Pedido.descrPedido, new { htmlAttributes = new { @class = "form-control", @placeholder = "Descrição" } })
                    </div>
                </div>

                <div class="form__box">
                    <div class="form__box__input-icon">
                        @Html.EditorFor(model => item.Pedido.qtdProd, new { htmlAttributes = new { @class = "form-control", } })
                    </div>
                </div>

                <div class="form-container-flex">
                    <input type="submit" value="Salvar" class="form__button" />
                    <a class="form__button" href="~/Comanda/ExibirComanda">Voltar</a>
                </div>
            }
        </div>
    </main>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/script")
</body>
</html>

