                <div class="container">
                    <h1 class="restaurant-menu__title-type-dishe">ENTRADAS</h1>
                </div>
                <div class="card-dishes container">
                    @foreach (var item in Model.Where(c => c.Categoria.idCategoria == 1))
                    {
                        <div class="card-dishes__item">
                            <picture class="card-dishes__item__img">
                                <img src="@item.Produto.imgProd" alt="">
                            </picture>
                            <h1 class="card-dishes__item__title">
                                @item.Produto.nomeProd
                            </h1>
                            <p class="card-dishes__item__paragraph">
                                @item.Produto.descrProd
                            </p>
                            <div class="card-dishes__item__info-buy">
                                <span class="card-dishes__item__info-buy__price">R$ @item.Produto.preco</span>
                                <span class="card-dishes__item__info-buy__icon">
