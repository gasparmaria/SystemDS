@model DragonSushi_ASP.NET.ViewModel.ReservaViewModel

@{
    ViewBag.Title = "Cadastrar Reserva";
    Layout = null;
}

@Styles.Render("~/Content/style.css")
@Scripts.Render("~/bundles/modernizr")

<main class="product__register">
    <div class="form">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <h1 class="form__title">Cadastrar reserva</h1>
            <a href="~/Cliente/CadastrarCliente" class="client__register__text">Cadastrar cliente</a>
            <div class="form__box">
                <label class="form__box__label" for="name">Cliente</label>

                <div class="form__box__input-icon">
                    @Html.EditorFor(model => model.Pessoa.cpf, new { htmlAttributes = new { @placeholder = "Informe o CPF do cliente" } })
                    @Html.ValidationMessageFor(model => model.Pessoa.cpf, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-container-flex">
                <div class="form__box">
                    <label class="form__box__label" for="name">Data</label>
                    <div class="form__box__input-icon">
                        @Html.EditorFor(model => model.Reserva.dataReserva, new { htmlAttributes = new { @type = "date" } })
                        @Html.ValidationMessageFor(model => model.Reserva.dataReserva, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form__box">
                    <label class="form__box__label" for="name">Hora</label>
                    <div class="form__box__input-icon">
                        @Html.EditorFor(model => model.Reserva.hora, new { htmlAttributes = new { @type = "time" } })
                        @Html.ValidationMessageFor(model => model.Reserva.hora, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form__box">
                <label class="form__box__label" for="phone">Número de pessoas</label>
                <div class="form__box__input-icon">
                    @Html.EditorFor(model => model.Reserva.numPessoas, new { htmlAttributes = new { @type = "number" } })
                    @Html.ValidationMessageFor(model => model.Reserva.numPessoas, "", new { @class = "text-danger" })
                </div>
            </div>

            <input type="submit" value="Cadastrar" class="form__button align-center" />
        }
    </div>
</main>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/script")