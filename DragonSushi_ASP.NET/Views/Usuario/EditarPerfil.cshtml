@model DragonSushi_ASP.NET.ViewModel.UsuarioViewModel

@{
    ViewBag.Title = "EditarPerfil";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">

    <meta name="keywords" content="Restaurante, Japonês, Delivery, Sushi, Temaki, ">
    <meta name="description" content="Faça já seu pedido na Dragon Sushi! Confira nossos pratos, ofertas e muito mais!">
    <meta name="author" content="Gabriel S. Evangelista, Henrique R. Pereira, Guilherme Ferreira, Gustavo Basilio, Maria Eduarda G. Lima, Guilherme Lemes">

    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Patua+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;700&display=swap" rel="stylesheet">

    <!--
        Fonts: Montserrat, Roboto and Patua One
        font-family: 'Montserrat', sans-serif;
          - Font weight: 300, 400, 600 and 700
        font-family: 'Roboto', sans-serif;
          - Font weight: 300, 400 and 700
        font-family: 'Patua One', cursive;
          - Font weight: 400
        font-family: 'Open Sans', sans-serif;
          - Font weight: 300, 400 and 700
    -->

    <script defer src="https://code.iconify.design/iconify-icon/1.0.0-beta.3/iconify-icon.min.js"></script>
    <script defer src="js/jquery-3.6.1.min.js"></script>
    <script defer src="js/script.js"></script>

    <title>Dragon Sushi - Restaurante Japonês</title>
</head>
<body class="edit-profile-page">
    <header class=" header">
        <div class="container">
            <div class="header__logo">
                <img src="~/images/logo.png" alt="">
            </div>
            <div class="header__container-menu-icon">
                <div class="header__search-bar-icon">
                    <iconify-icon class="iconify-icon" icon="eva:search-fill"></iconify-icon>
                </div>
                <div class="header__mobile-menu">
                    <div class="header_mobile-menu_line-one"></div>
                    <div class="header_mobile-menu_line-two"></div>
                    <div class="header_mobile-menu_line-three"></div>
                </div>
            </div>
            <nav class="header__navigation-menu">
                <ul class="header_navigation-menu_list">
                    <div class="header_navigation-menulist_links">
                    <li class="header_navigation-menulistlinks_item"><a href="#">Home</a></li>
                    <li class="header_navigation-menulistlinks_item"><a href="#cardapio">Cardápio</a></li>
                    <li class="header_navigation-menulistlinks_item"><a href="#quem-somos">Quem somos</a></li>=                    
                
            </nav>
        </div>
        <div class="header_navigation-menulist_container">
            <div class="search-bar header_navigation-menulist_search-bar">
                <a class="search-bar_icon headernavigation-menulistsearch-bar_icon" href="#">
                    <iconify-icon class="iconify-icon" icon="eva:search-fill"></iconify-icon>
                </a>
                <input class="search-bar_txt headernavigation-menulistsearch-bar_txt" type="text"
                       placeholder="O que deseja?">
            </div>
            <div class="header_navigation-menulist_buttons">
                <a class="accent-button header_navigation-menulistbuttons_item" href="#">Cadastra-se</a>
                <a class="accent-button header_navigation-menulistbuttons_item" href="#">Entrar</a>
            </div>
        </div>
        </ul>
        </nav>
        <div class="header_profilecontainer_tooltip-shopping-cart">
            <div class="header_profile_shopping-cart">
                <a href="#">
                    <span>
                        <iconify-icon class="icon-iconify" icon="entypo:shopping-cart"></iconify-icon>
                    </span>
                </a>
            </div>
            <div class="header_profile_tooltip">
                <iconify-icon class="iconify-icon" icon="gg:profile"></iconify-icon>
                <div class="header_profiletooltip_text">
                    <h1>Minha conta</h1>
                    <ul>
                        <li><a href="#">Editar perfil</a></li>
                        <li><a href="#">Histórico de pedidos</a></li>
                    </ul>
                </div>
            </div>
        </div>
        </div>
        <div class="search-bar-mobile">
            <div class="search-bar mobile header_navigation-menulist_search-bar">
                <a class="search-bar_icon headernavigation-menulistsearch-bar_icon" href="#">
                    <iconify-icon class="iconify-icon" icon="eva:search-fill"></iconify-icon>
                </a>
                <input class="search-bar_txt headernavigation-menulistsearch-bar_txt" type="text"
                       placeholder="O que deseja?">
            </div>
        </div>
    </header>
    <main class="edit-profile">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="container">
                <h1 class="edit-profile__title">EDITAR PERFIL</h1>
            </div>
            <div class="container flex">
                <div class="form">
                    <div class="form-container-flex">
                        <div class="form__box">
                            @Html.LabelFor(model => model.Pessoa.nomePessoa, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="form_box_input-icon">
                                <iconify-icon icon="bxs:user"></iconify-icon>
                                @Html.EditorFor(model => model.Pessoa.nomePessoa, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Pessoa.nomePessoa, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form__box">
                            @Html.LabelFor(model => model.Usuario.login, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="form_box_input-icon">
                                <iconify-icon icon="eva:email-fill"></iconify-icon>
                                @Html.EditorFor(model => model.Usuario.login, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Usuario.login, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form__box">
                        @Html.LabelFor(model => model.Pessoa.telefone, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="form_box_input-icon">
                            <iconify-icon icon="bi:phone-fill"></iconify-icon>
                            @Html.EditorFor(model => model.Pessoa.telefone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Pessoa.telefone, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form__box">
                        @Html.LabelFor(model => model.Usuario.senha, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="form_box_input-icon">
                            <iconify-icon icon="uis:padlock"></iconify-icon>
                            @Html.EditorFor(model => model.Usuario.senha, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Usuario.senha, "", new { @class = "text-danger" })
                        </div>
                        </div>
                    </div>
            <div class="form__box">
                @Html.LabelFor(model => model.Usuario.ConfirmaSenha, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="form_box_input-icon">
                    <iconify-icon icon="uis:padlock"></iconify-icon>
                    @Html.EditorFor(model => model.Usuario.ConfirmaSenha, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Usuario.ConfirmaSenha, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-container-flex-button">

                <input type="submit" value="Salvar" class="form__button" />

                <input type="submit" value="Limpar" class="form__button" />
            </div>
                </div>
                <picture class="background-image">
                    <img src="~/images/edit-profile/edit-profile-background.png" alt="">
                </picture>
         
        }
    </main>
    <footer class="footer">
        <div class="footer__container-img">
            <img src="images/logo.png" alt="">
        </div>
        <div class="container">
            <h1 class="footer__title">DRAGON SUSHI</h1>
        </div>
        <div class="container">
            <div class="footer__info">
                <div class="footer_info_links">
                    <h2 class="footer_info_title">Links</h2>
                    <ul class="footer_infolinks_list">
                        <li><a href="#">> Home</a></li>
                        <li><a href="#cardapio">> Cardápio</a></li>
                        <li><a href="#quem-somos">> Quem Somos</a></li>
                    </ul>
                </div>
                <div class="footer_info_social">
                    <h2 class="footer_info_title">Social</h2>
                    <ul class="footer_infolinks_list">
                        <li><a href="#">> Instagram</a></li>
                    </ul>
                </div>
                <div class="footer_info_address">
                    <h2 class="footer_info_title">Endereço</h2>
                    <ul class="footer_infolinks_list">
                        <li>R. Guiapá, 678, Villa Leopoldina,<br> São Paulo - SP.</li>
                        <li>Telefone: (11) 3834-4111</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container footer__copyright">
            <p class="footer__all-rights-reserved">
                Copyright © 2022 Dragon Sushi | Todos os Direitos Reservados
            </p>
            <p class="footer__developers">
                Desenvolvido por Westen
            </p>
        </div>
    </footer>
</body>
</html>
