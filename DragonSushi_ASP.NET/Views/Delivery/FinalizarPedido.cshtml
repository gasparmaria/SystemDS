@model DragonSushi_ASP.NET.ViewModel.DeliveryViewModel

@{
    ViewBag.Title = "FinalizarPedido";
}
<div class="container">
    <h1 class="shopping-cart__title">CARRINHO DE COMPRAS</h1>
</div>
